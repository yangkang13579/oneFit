/*顶部*/
.bg {
  height: 100%;
  width: 100%;
  background-image: linear-gradient(#23A7A2, #0D7FC6);
  position: fixed;
  top: 0;
  left: 0;
}
.title {
  color: #ff8c12;
  line-height: 54rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.page-top {
  top: 0;
  left: 0;
  z-index: 2;
  position: relative;
}
.list-wrap {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 40rpx 30rpx 0 30rpx;
  border-radius: 40rpx;
  border: 1rpx solid #e3e3e3;
  background: #fff;
  padding-bottom: 20rpx;
}
.list-wrap .tit {
  border-top-left-radius: 40rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #e3e3e3;
  border-bottom: 0;
  background: #f2f2f2;
  color: #333;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list-wrap .items {
  margin-bottom: 40rpx;
  padding: 0 40rpx;
  margin-bottom: 10rpx;
  color: #0572ac;
  font-size: 30rpx;
}
.list-wrap .items span {
  color: #333;
  font-size: 28rpx;
}
.list-wrap .eitBtn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list-wrap .eitBtn view {
  width: 300rpx;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
  text-align: center;
}
.list-wrap .eitBtn .del {
  background: #97989a;
  margin-left: 30rpx;
}
.list-wrap .eitBtn .eidt {
  background: #0074ae;
}
.empty {
  position: fixed;
  top: 30%;
  left: 0;
  font-size: 32rpx;
  text-align: center;
  width: 100%;
  color: #fff;
}
.empty view {
  margin-top: 10rpx;
}
.toast {
  display: flex;
  align-items: center;
  position: fixed;
  top: 40%;
  justify-content: center;
  width: 100%;
}
.toast p {
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
}
