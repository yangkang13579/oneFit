page {
  background: #f4f4f4;
}
.banner {
  width: 100%;
  height: 500rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.banner image {
  width: 650rpx;
  height: 410rpx;
}
.title {
  width: 700rpx;
  background: #fff;
  padding: 25rpx;
}
.title .textName {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 35rpx;
  color: #000;
}
.title .price {
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.title .price .new {
  color: #e84644;
  font-size: 35rpx;
}
.title .price .order {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #878787;
  margin-top: 10rpx;
}
.jianjie {
  margin-top: 20rpx;
  background: #fff;
  width: 700rpx;
  padding: 30rpx 25rpx;
}
.jianjie .jian-title {
  font-size: 32rpx;
}
.jianjie .jian-text {
  font-size: 28rpx;
  color: #878787;
}
.buyName {
  margin-top: 20rpx;
  background: #fff;
  margin-bottom: 200rpx;
  width: 700rpx;
  padding: 30rpx 25rpx;
}
.buyName .buy-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.buyName .buy-text {
  display: flex;
  justify-content: flex-start;
}
.buyName .buy-text .qixian {
  width: 200rpx;
  color: #878787;
  font-size: 28rpx;
}
.buyName .buy-text .tian {
  color: #676767;
  font-size: 28rpx;
}
.fixed {
  position: fixed;
  background: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 0;
}
.fixed .buy {
  width: 710rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #e84644;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  margin-left: 20rpx;
}
.fixed .bot {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed .bot text {
  font-size: 28rpx;
}
