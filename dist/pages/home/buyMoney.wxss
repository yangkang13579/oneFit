@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.info-top {
  width: 100%;
  height: 150rpx;
  display: flex;
  position: relative;
}
.info-top .icon34 {
  width: 100%;
  height: 150rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.info-top .icon35 {
  width: 491rpx;
  height: 59rpx;
  position: absolute;
  left: 128rpx;
  top: 47rpx;
}
.icon33 {
  width: 53rpx;
  height: 27rpx;
  margin-top: 13rpx;
  margin-left: 349rpx;
}
.content {
  width: 700rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 25rpx;
  background: #2d2d2d;
}
.content view {
  width: 50%;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  line-height: 80rpx;
}
.content .left {
  border-right: 1rpx solid #e02510;
}
.checkBox {
  margin-top: 30rpx;
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.checkBox image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.checkBox .left {
  display: flex;
  align-items: center;
}
.checkBox .right {
  font-size: 30rpx;
  color: #e02510;
  margin-right: 25rpx;
}
.btn {
  width: 500rpx;
  height: 70rpx;
  margin-top: 125rpx;
  margin-left: 125rpx;
  background: #e02510;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
}
.btn2 {
  margin-top: 30rpx;
  background: 0;
  color: #fff;
  border: 1px solid #e02510;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
