      <image src="../images/save-icon.png" class="save-icon"/>
    </view>
    <view class="modal" wx:if="{{modal}}">
      <view class="opacity" bindtap="closeModal"/>
      <view class="modal-con">
        <view class="tit-p" wx:for="{{catalogs}}" wx:for-index="idx" data-index="{{idx}}" bindtap="titFun">
          <view class="view-border" hidden="{{currentIndex !== idx}}"/>
          <view class="view-border2" hidden="{{currentIndex === idx}}"/>
          <view class="text">{{item.name}}</view>
        </view>
        <view class="button">
          <view class="reset" bindtap="reset">重置</view>
          <view class="sure" bindtap="sure">确定</view>
        </view>
