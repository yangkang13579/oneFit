.banner {
  width: 100%;
  height: 425rpx;
}
.banner image {
  width: 100%;
  height: 425rpx;
}
.title {
  width: 710rpx;
  padding: 10rpx 20rpx;
}
.title .top {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title .top .name {
  font-size: 35rpx;
}
.title .top .size {
  font-size: 28rpx;
  color: #dc5863;
}
.title .study {
  font-size: 28rpx;
  color: #d4d4d4;
}
.title .code {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #452d4d;
  border-radius: 20rpx;
  width: 160rpx;
  padding: 10rpx 8rpx;
  background: #f0e4f0;
}
.time {
  width: 100%;
  padding: 10rpx 20rpx;
}
.time .timename {
  font-size: 32rpx;
}
.buy {
  width: 710rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #e84644;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  margin-left: 20rpx;
}
.hover {
  background: red;
  color: #fff;
}
.times {
  height: 130rpx;
  width: 100%;
  overflow: auto;
  display: flex;
  overflow-y: hidden;
}
.times .time1 {
  flex-shrink: 0;
}
.times .time1 .block {
  float: left;
  color: #666;
  font-size: 32rpx;
  width: 110rpx;
  text-align: center;
  margin: 5rpx 0;
}
.times .time1 .block .date {
  width: 50rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50rpx;
  margin-bottom: 15rpx;
}
