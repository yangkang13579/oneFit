
    <view class="weui-msg">
        <view class="icon-box">
            <icon type="warn" size="93"/>
            <view class="icon-box__ctn">
                <view class="icon-box__title">系统发生错误</view>
                <view class="icon-box__desc weui-msg__desc">错误代码:[{{code}}]</view>
                <view class="icon-box__desc weui-msg__desc">{{message}}</view>
            </view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="restart">重新启动</button>
                <button class="weui-btn" type="default" bindtap="cancel">返回到上一步</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
        </view>
    </view>