
  <view class="_5a52ef2">
    <view class="bg _5a52ef2"/>

     <view class="page-top _5a52ef2">
        <view class="wrap _5a52ef2">
        <view class="empty _5a52ef2"  wx:if="{{list.length === 0}}">
          <view class="_5a52ef2">暂无数据</view>
        </view>
        <block  wx:for="{{list}}" wx:key="{{index}}" class="_5a52ef2">
            <view class="list-wrap _5a52ef2">
              <view class="middle _5a52ef2">
                <view class="items _5a52ef2">
                  <image src="{{item.user.avatar}}" class="_5a52ef2"/>
                  <text class="_5a52ef2">{{item.user.nickName}}</text>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    审核状态：
                    <text wx:if="{{item.status==0}}" class="_5a52ef2">未审核</text>
                    <text wx:if="{{item.status==1}}" class="_5a52ef2">未通过</text>
                    <text wx:if="{{item.status==2}}" class="_5a52ef2">已通过</text>
                    <text wx:if="{{item.status==3}}" class="_5a52ef2">已发货</text>
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    收货人姓名：{{item.addressee}}
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    收货人地址：{{item.address}}
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    申请物品ID：{{item.id}}
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    申请物品：{{item.name}}
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    申请数量：{{item.applyCount}}
                  </span>
                </view>
                 <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    申请原因：{{item.applyReason}}
                  </span>
                </view>
                 <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    手机号码：{{item.mobile}}
                  </span>
                </view>
                <view class="name _5a52ef2">
                  <span class="_5a52ef2">
                    申请时间：{{item.createDate}}
                  </span>
                </view>
              </view>
            </view>
        </block>
    </view>
    </view>
 
  </view>