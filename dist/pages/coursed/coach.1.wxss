.banner {
  width: 100%;
  height: 425rpx;
}
.banner image {
  width: 100%;
  height: 425rpx;
}
.title {
  width: 710rpx;
  padding: 10rpx 20rpx;
}
.title .top {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title .top .name {
  font-size: 35rpx;
}
.title .top .size {
  font-size: 28rpx;
  color: #dc5863;
}
.title .study {
  font-size: 28rpx;
  color: #d4d4d4;
}
.title .code {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #452d4d;
  border-radius: 20rpx;
  width: 160rpx;
  padding: 10rpx 8rpx;
  background: #f0e4f0;
}
.time {
  width: 710rpx;
  padding: 10rpx 20rpx;
}
.time .timename {
  font-size: 32rpx;
}
