        <input type="text" placeholder="搜索会员"/>
        <image src="../../images/icon56.png"/>
      </view>

      <view class="tit">
        <view  wx:for="{{tit}}" bindtap="tabFun" wx:for-index="idx" data-index="{{idx}}" class="tit-1 {{ currentIndex ===  idx ? 'hover' : ''}}">
