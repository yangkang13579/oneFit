@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.center {
  margin-top: 23%;
  z-index: 2;
  height: 340rpx;
  width: 100%;
}
.center .icon2 {
  width: 340rpx;
  height: 340rpx;
  position: absolute;
  margin-left: 205rpx;
}
.center .icon3 {
  width: 244rpx;
  height: 244rpx;
  position: absolute;
  margin-left: 253rpx;
  margin-top: 48rpx;
  border-radius: 50%;
}
.name {
  width: 100%;
  margin-top: 48rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.buy {
  width: 672rpx;
  height: 400rpx;
  margin: 54rpx 25rpx 45rpx 25rpx;
  background: #2d2d2d;
  border-radius: 10rpx;
  clear: both;
  overflow: hidden;
  padding: 0 14rpx;
}
.buy .tit {
  font-size: 46rpx;
  color: #e02510;
  width: 100%;
  text-align: center;
  margin: 21rpx 0;
  font-weight: bold;
}
.buy .item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.buy .item-list {
  width: 151rpx;
  height: 270rpx;
  border-radius: 20rpx;
  color: #fff;
  border: 1rpx solid #e02510;
  text-align: center;
  position: relative;
  margin-right: 24rpx;
}
.buy .item-list .icon32 {
  width: 41rpx;
  height: 41rpx;
}
.buy .item-list .hover {
  width: 100%;
  height: 58rpx;
  border-radius: 0 0 20rpx 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #e02510;
  display: flex;
  align-items: center;
  justify-content: center;
}
.buy .item-list .item-tit {
  font-weight: bold;
  margin: 31rpx 0 21rpx 0;
}
.buy .item-list .price {
  font-size: 34rpx;
}
.buy .item-list:nth-last-of-type(1) {
  margin-right: 0;
}
.bottom {
  width: 500rpx;
  height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  margin: 65rpx 124rpx 0 124rpx;
  background: #e02510;
  border-radius: 40rpx;
}
