@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.headers {
  height: 160rpx;
  width: 700rpx;
  margin-left: 25rpx;
  background: #2d2d2d;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.headers image {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  margin: 0 64rpx 0 22rpx;
}
.headers .headers-top {
  text-align: center;
}
.headers .headers-top .tit {
  font-size: 36rpx;
  color: #e02510;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.items {
  margin: 20rpx 25rpx 0 25rpx;
  width: 700rpx;
  padding-bottom: 61rpx;
  background: #2d2d2d;
  clear: both;
  overflow: hidden;
}
.items .item-list {
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  float: left;
}
.items .item-list image {
  width: 320rpx;
  height: 240rpx;
}
.items .item-list view {
  font-size: 20rpx;
  color: #acacac;
}
.items .item-list view text {
  margin-left: 15rpx;
}
.ticeTime {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 65rpx;
  color: #fff;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
}
.ticeTime picker {
  margin-right: 11rpx;
  width: 293rpx;
  height: 52rpx;
  border: 1rpx solid #acacac;
  position: relative;
}
.ticeTime picker .picker {
  color: #fff;
  font-size: 26rpx;
  line-height: 52rpx;
  padding-left: 10rpx;
}
.ticeTime picker .right {
  position: absolute;
  right: -1rpx;
  top: -1rpx;
  width: 51rpx;
  height: 54rpx;
  bottom: 0;
  background: #e02510;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ticeTime picker .right image {
  width: 30rpx;
  height: 30rpx;
}
.btn {
  width: 500rpx;
  height: 71rpx;
  margin-left: 125rpx;
  background: #e02510;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  margin-top: 46rpx;
  margin-bottom: 67rpx;
}
