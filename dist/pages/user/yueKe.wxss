@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.content {
  width: 700rpx;
  margin-left: 25rpx;
  background: #2d2d2d;
  padding: 25rpx 0;
  border-radius: 20rpx;
}
.content .tit {
  margin: 0 25rpx;
  font-size: 36rpx;
  color: #e02510;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content .tit image {
  width: 159rpx;
  height: 33rpx;
}
.content .item-list {
  margin-top: 56rpx;
}
.content .item-list .item {
  display: flex;
  position: relative;
  height: 168rpx;
  margin-bottom: 23rpx;
}
.content .item-list .item image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 35rpx;
  margin-left: 18rpx;
}
.content .item-list .item .icon26 {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 4rpx;
  left: 0;
}
.content .item-list .center {
  color: #fff;
}
.content .item-list .center .top {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.content .item-list .center .bottom {
  color: #ffffff;
  border: 1rpx solid #e02510;
  border-radius: 25rpx;
  font-size: 24rpx;
  padding: 0 5rpx;
  width: 97rpx;
  text-align: center;
}
.content .item-list .cancle {
  padding: 3rpx 40rpx;
  background: #e02510;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  color: #fff;
  position: absolute;
  right: 25rpx;
  top: 21rpx;
}
