@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.headers {
  height: 160rpx;
  width: 700rpx;
  margin-left: 25rpx;
  background: #2d2d2d;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.headers image {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  margin: 0 64rpx 0 22rpx;
}
.headers .headers-top {
  text-align: center;
}
.headers .headers-top .tit {
  font-size: 36rpx;
  color: #e02510;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.item {
  width: 700rpx;
  margin: 41rpx 25rpx 35rpx 25rpx;
  background: #2d2d2d;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 238rpx;
  position: relative;
}
.item view {
  height: 139rpx;
  text-align: center;
  width: 50%;
}
.item view .text {
  font-size: 30rpx;
  color: #acacac;
  margin-top: -15rpx;
  height: 22rpx;
}
.item view view {
  font-size: 110rpx;
  font-weight: bold;
  color: #fff;
  width: 100%;
  text-align: center;
}
.item .left {
  border-right: 2rpx solid #e02510;
}
.item2 {
  margin-top: 0;
}
.item2 picker-view {
  width: 131rpx;
  height: 139rpx;
  border-right: 2rpx solid #e02510;
  overflow: hidden;
  position: relative;
}
.item2 picker-view-column {
  height: 200rpx;
  width: 60rpx;
  color: #fff;
}
.item2 picker-view-column view {
  width: 100%;
}
.item2 .opacity {
  position: absolute;
  width: 100%;
  height: 139rpx;
  top: 0;
  right: 0;
  z-index: 22;
  background: #2d2d2d;
}
.item2 .times {
  width: 593rpx;
  display: flex;
  align-items: center;
}
.item2 .times > view .times-text {
  font-size: 24rpx;
  color: #acacac;
  height: 20rpx;
}
.item2 .times > view .times-num {
  font-size: 90rpx;
  color: #fff;
  font-weight: bold;
}
.btn {
  margin-top: 70rpx;
  clear: both;
  overflow: hidden;
}
.btn view {
  width: 276rpx;
  height: 70rpx;
  border: 1rpx solid #e02510;
  border-radius: 40rpx;
  margin-left: 66rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 31rpx;
  font-size: 32rpx;
  float: left;
  font-weight: bold;
}
.hover {
  background: 0;
}
