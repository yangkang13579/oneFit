            <view class="cover-con">
              <view class="tit-cover"><i>{{item.title}}</i></view>
              <view class="tags">
                <block wx:for="{{item.tags}}" wx:key="id">
                  <text>{{item.name}}</text>
                </block>
              </view>
              <view class="cover-num">引用次数{{item.cited}}</view>
            </view>
            <view data-id="{{item.id}}" catchtap="addSeart" class="right">
              <image src="../images/icon21.png"/>
            </view>
          </view>
        </block>
        <view class="noImg" wx:if="{{schoolResource.length==''}}">
          <image src="https://staticservice.extremevalue.cn/images/9225/2226/9572/8de9437c5dba69d3e106e4a0bb723a18_0_0.png"/>
        </view>
      </view>
    </scroll-view>
