
	<view class="carPay">
		<view class="carPayContent">
			<view class="carPayNews">
				<!--<view class="carPayNews-left">
																<image src="https://cdn.sunjoypai.com/images/9993/4341/4749/2928910db3cb4995f668b28e8dc1da2e_0_0.png" />
															</view>-->
				<!--添加新地址-->
				<view class="question" catchtap="addressPage"  wx:if="{{hasDefaultAddno}}">
					<text class="add-address">+添加地址</text>
				</view>
				<!--显示默认地址-->
				<view class="default-address" catchtap="aBookPage"  wx:if="{{hasDefaultAddyes}}">
					<view class="user-info">
						<view class="name-mobile">
							<text class="name">收货人：{{defaultAdd.userName}}</text>
							<text class="mobile">联系电话：{{defaultAdd.mobile == 'undefined' || defaultAdd.mobile=='' ? '电话暂未设置' : defaultAdd.mobile}}</text>
						</view>
						<text class="address">收货地址：{{defaultAdd.province + defaultAdd.city + defaultAdd.district + defaultAdd.addr}}</text>
					</view>
				</view>
				<!--<view class="carPayNews-right">
																<image src="https://cdn.sunjoypai.com/images/4529/2555/9964/38b34c55c946d95fe879834d7cb394f5_0_0.png" />
															</view>-->
			</view>
			<view class="carXiu">
				<image src="https://cdn.sunjoypai.com/images/2072/3724/5703/7f62a2736b33793176fd088543850fb3_0_0.png"/>
				<text>修修商城</text>
			</view>
			<block wx:for="{{stroeDetail}}" wx:key="id" wx:for-index="idxA" data-index="{{idxA}}">
				<view class="carListBox">
					<block wx:for="{{item.products}}" wx:key="index" wx:for-index="idx" data-index="{{idx}}">
						<view class="carLists">
							<view class="carListimage">
								<image src="{{item.image}}"/>
							</view>
							<view class="carListCon">
								<view class="carListCon-title">
									{{item.name}}
								</view>
								<view class="carListCon-num">
									x {{item.count}}
								</view>
							</view>
							<view class="carListRight">
								￥{{item.cardPrice}}
							</view>
						</view>
					</block>
				</view>
			</block>
			<view class="carDear">
				<text>优惠券</text>
				<input bindinput="bindKeyInput" class="input" type="text" placeholder="请输入6位兑换码"/>
				<view class="vscode">
					<image wx:if="{{isCode}}" src="http://cdn.sunjoypai.com/images/0927/4832/5537/544da53a761a265b229fae7250c4cd79_0_0.png"/>
				</view>
			</view>
			<!--<view class="carStore">
						<text>上门费  <text style="color:#666">￥330元</text></text>
						<image bindtap="Shows" wx:if="{{isShowSm}}" src="https://cdn.sunjoypai.com/images/1904/3925/4553/6c17de25637cb7f7315a71704c37924d_0_0.png" />
						<image bindtap="Hides" wx:if="{{isHideSm}}" src="https://cdn.sunjoypai.com/images/7743/6237/3504/fc12ffd202d34f438b865ff7a4c2bfef_0_0.png" />
					</view>-->
			<view class="carStore">
				<text>店铺余额  <text style="color:#666">￥{{amount}}元</text></text>
				<image bindtap="Shows" wx:if="{{isShowYe}}" src="https://cdn.sunjoypai.com/images/1904/3925/4553/6c17de25637cb7f7315a71704c37924d_0_0.png"/>
				<image bindtap="Hides" wx:if="{{isHideYe}}" src="https://cdn.sunjoypai.com/images/7743/6237/3504/fc12ffd202d34f438b865ff7a4c2bfef_0_0.png"/>
			</view>
			<!--<view class="carErear">
					<view class="carErear-text">买家留言</view>
					<view class="textErea">
						<textarea placeholder="买家留言"></textarea>
					</view>
				</view>-->
			<view class="carIdnode">
				<view class="carIdnode-text">
					<text class="carIdnode-one">需支付:</text>
					<text class="carIdnode-two">{{totalMoney}}元</text>
				</view>
			</view>
			<view class="payFixed">
				<view class="payFixed-left">
					<text class="payFixed-left-one">实付款：</text>
					<text class="payFixed-left-two">￥{{totalMoney}}</text>
				</view>
				<view bindtap="play" class="payFixed-right">
					确认支付
				</view>
			</view>
		</view>
	</view>