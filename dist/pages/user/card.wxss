@import "./../../components/headers.wxss";
page {
  background: #111111;
}
.icon8 {
  width: 100%;
  height: 420rpx;
  margin-top: 165rpx;
}
.item {
  margin-top: 20rpx;
}
.item .list {
  width: 700rpx;
  height: 162rpx;
  position: relative;
  margin: 0 25rpx 20rpx 25rpx;
}
.item .list image {
  position: absolute;
  width: 700rpx;
  height: 162rpx;
  left: 0;
  top: 0;
}
.item .list .content {
  position: absolute;
  width: 700rpx;
  height: 162rpx;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
}
.item .list .content .left {
  margin: 23rpx 30rpx;
}
.item .list .content .left .text {
  font-size: 26rpx;
  color: #e02510;
}
.item .list .content .left .weight {
  font-weight: bold;
  font-size: 72rpx;
  color: #e02510;
  margin: -20rpx 0 -40rpx 0;
}
.item .list .content .left .grey {
  font-size: 20rpx;
  color: #111111;
}
.item .list .content .right {
  position: absolute;
  right: 36rpx;
  top: 36rpx;
}
.item .list .content .right view {
  width: 130rpx;
  height: 50rpx;
  background: #111111;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #fff;
}
.item .list .content .right text {
  font-size: 22rpx;
  margin-top: 39rpx;
  text-decoration: underline;
  color: #fff;
  text-align: right;
}
