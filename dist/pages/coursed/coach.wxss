page {
  background: #f4f4f4;
  width: 100%;
  height: 100%;
}
.back {
  position: fixed;
  top: 50rpx;
  left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}
.banner {
  width: 100%;
  height: 425rpx;
}
.banner image {
  width: 100%;
  height: 425rpx;
}
.title {
  width: 710rpx;
  padding: 10rpx 20rpx 30rpx 20rpx;
  background: #fff;
}
.title .top {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title .top .name {
  font-size: 35rpx;
}
.title .top .size {
  font-size: 28rpx;
  color: #dc5863;
}
.title .study {
  font-size: 26rpx;
  color: #d4d4d4;
}
.title .code {
  text-align: center;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #452d4d;
  border-radius: 20rpx;
  width: 160rpx;
  padding: 2rpx 0rpx;
  background: #f0e4f0;
}
.time {
  width: 720rpx;
  padding: 20rpx 15rpx;
}
.time .timename {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.time .two {
  font-size: 26rpx;
  color: #777777;
}
.select {
  background: #fff;
}
.buy {
  width: 710rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #e84644;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  margin-left: 20rpx;
}
.hover {
  background: red;
  color: #fff;
}
.times {
  height: 130rpx;
  width: 100%;
  overflow: auto;
  display: flex;
  overflow-y: hidden;
}
.times .time1 {
  flex-shrink: 0;
}
.times .time1 .block {
  float: left;
  color: #666;
  font-size: 32rpx;
  width: 110rpx;
  text-align: center;
  margin: 5rpx 0;
}
.times .time1 .block .date {
  width: 50rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50rpx;
  margin-bottom: 15rpx;
}
.dateTime {
  overflow: auto;
  display: flex;
  overflow-y: hidden;
  margin: 20rpx 0;
}
.dateTime .block {
  flex-shrink: 0;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}
.dateTime .block .items {
  margin-bottom: 20rpx;
  width: 130rpx;
  min-width: 130rpx;
  max-width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #777777;
  background: #fff;
  color: #452d4d;
  height: 80rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
