page {
  background: #f4f4f4;
  width: 100%;
  height: 100%;
}
.back {
  position: fixed;
  top: 50rpx;
  left: 20rpx;
  width: 35rpx;
  height: 35rpx;
  z-index: 5;
}
.top {
  width: 100%;
  height: 480rpx;
}
.top .banner {
  position: relative;
  width: 100%;
  height: 480rpx;
}
.top .coach {
  position: absolute;
  top: 130rpx;
  left: 20rpx;
  z-index: 2;
  display: flex;
  width: 400rpx;
  padding: 10rpx 0;
  flex-direction: column;
  justify-content: flex-start;
}
.top .coach image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.top .coach .name {
  font-size: 32rpx;
  color: #fff;
  margin-top: 20rpx;
}
.top .coach .study {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #fff;
}
.top .eait {
  position: absolute;
  top: 350rpx;
  right: 20rpx;
  z-index: 2;
  display: flex;
  width: 300rpx;
  padding: 10rpx 0;
  justify-content: space-between;
}
.top .eait .bianji {
  width: 120rpx;
  height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  background: #bfbfbf;
  color: #464646;
  font-size: 26rpx;
}
.top .eait .guanli {
  font-size: 26rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  background: #e5464a;
  color: #fff;
}
.con {
  width: 710rpx;
  padding: 50rpx 20rpx;
  background: #fff;
  border-radius: 50rpx 50rpx 0 0;
  margin-top: -40rpx;
  z-index: 4;
}
.con .contop {
  width: 100%;
}
.con .contop .title {
  width: 100%;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.con .contop .text {
  width: 100%;
  font-size: 28rpx;
}
.con .concot {
  width: 100%;
  margin-top: 40rpx;
}
.con .concot .title {
  width: 100%;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.con .concot .conbox {
  width: 100%;
  height: 210rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.con .concot .conbox image {
  width: 270rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.con .concot .conbox .conright {
  display: flex;
  height: 170rpx;
  padding: 20rpx 0;
  flex-direction: column;
  justify-content: space-between;
}
.con .concot .conbox .conright .one {
  font-size: 28rpx;
  color: #000;
}
.con .concot .conbox .conright .two {
  font-size: 26rpx;
  color: #818181;
}
.con .concot .conbox .conright .three {
  font-size: 30rpx;
  color: #e5464a;
}
.con .conbot {
  width: 100%;
  margin-top: 40rpx;
}
.con .conbot .title {
  width: 100%;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.con .conbot .conbox image {
  width: 100%;
}
